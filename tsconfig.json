{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
